<!DOCTYPE html>
<html class="root" lang="de">
{% include "partials/site/head.html.twig" %}
<body class="site">
    {% include 'partials/site/header.html.twig' %}

    <div class="content">
        {% include "partials/site/flashmessage.html.twig" %}

        {% block contentabove %}{% endblock %}

        {% if pagination.getTotalItemCount > 0 %}
            <div class="navigation -top">
                {% block findnavigation %}{% endblock %}
            </div>

            <div class="result">
                <section class="facets">
                    {% block sidebar %}{% endblock %}
                </section>
                {% block content %}{% endblock %}
            </div>

            <div class="navigation -bottom">
                {% block footer %}{% endblock %}
            </div>
        {% else %}
            {% block noresults %}{% endblock %}
        {% endif %}
    </div>

    {% include 'partials/site/footer.html.twig' %}
    {% include 'partials/site/colophon.html.twig' %}

    {% block javascripts %}
        <script src="{{ asset('js/vendor.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}
</body>
