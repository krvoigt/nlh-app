{% extends "content.html.twig" %}

{% form_theme form _self %}

{%- block button_row -%}
    <p class="advanced-search_controls">
        {{- form_widget(form) -}}
    </p>
{%- endblock button_row -%}

{%- block form_row -%}
    <p class="advanced-search_row -{{ form.vars['name'] }}">
        {{- form_label(form) -}}
        {{- form_errors(form) -}}
        {{- form_widget(form) -}}
    </p>
{%- endblock form_row -%}

{%- block form_widget_compound -%}
    {%- if form.parent is empty -%}
        {{ form_errors(form) }}
    {%- endif -%}
    {{- block('form_rows') -}}
    {{- form_rest(form) -}}
{%- endblock form_widget_compound -%}

{% block body %}
    <h1>{{ 'Advanced search'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}
