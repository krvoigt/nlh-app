<?xml version="1.0"?>
{% set firstElement = feeds|first %}
<rss version="2.0">
    <channel>
        <title>Nationallizenzen RSS-Feed{% if category is not empty %} - {{ category | trans }}{% endif %}</title>
        <pubDate>{{ firstElement.date_indexed }}</pubDate>
        <lastBuildDate>{{ firstElement.date_indexed }}</lastBuildDate>
        <description>The stream informs about newly added works to the  Nationallizenzen document server hosted at the SUB GÃ¶ttingen.</description>
        {% for feed in feeds %}
            <item>
                <title>{{ feed.title | first }}</title>
                <link>{{ path('_detail', {id: feed.id}) }}</link>
                <pubDate>{{ feed.date_indexed }}</pubDate>
                <description><![CDATA[
                    {{ feed.date_indexed|date("d.m.Y") }}
                ]]></description>
            </item>
        {% endfor %}
    </channel>
</rss>
