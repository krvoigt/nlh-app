{% set page = app.request.get('page') ?: 1 %}

{% if document['fulltext_url'] is defined %}
    <section class="transcript">
        <h2 class="viewer_heading">{{ 'Transcript'|trans }}</h2>
        <div class="transcript_page">
            {% autoescape %}
                {{ render(controller('AppBundle:Document:fullText', { 'id': document['presentation_url'][page - 1] })) | nl2br }}
            {% endautoescape %}
        </div>
    </section>
{% endif %}
