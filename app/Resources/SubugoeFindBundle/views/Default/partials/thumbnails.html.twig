<section class="thumbnails">
    {% if document.presentation_url is defined %}
        <ul class="thumbnails_list">
            {% for page in document.presentation_url %}
                {% set link = document.id ~ '?page=' ~ loop.index %}
                {% set isCurrent = (page == documentStructure.page) %}
                {# TODO: Find a more elegant way to build image URL #}
                {% set identifier = document['nlh_id'][loop.index0] %}
                <li class="thumbnails_item {{ isCurrent ? '-current' }}">
                    <a class="thumbnails_link" {{ not isCurrent ? 'href=' ~ link }}>
                        <img data-original="{{ path('_image', {'format': 'jpg', 'identifier': identifier, 'region': 'full', 'size': thumbnail_size, 'rotation': 0, 'quality': 'default'})  }}" alt="">
                        <span class="thumbnails_page-number">
                            <span class="sr-only">{% trans %}Go to page{% endtrans %}</span>
                            {{ loop.index }}
                        </span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</section>
