<header class="viewer_header">
    <div class="viewer_column">
        <h1 class="viewer_title" title="{{ document.title|first }}">
            {{ document.title | first }}
        </h1>
    </div>
    <div class="viewer_column">
        <div class="viewer_controls -right">
            <div class="viewer_control-group">
                {% if document.fulltext_url is defined %}
                    <button class="viewer_control -toggle-panel" data-target="transcript">{{ 'Transcript'|trans }}</button>
                {% endif %}
                {% if documentStructure.tableOfContents %}
                    <button class="viewer_control -toggle-panel" data-target="toc">{{ 'Contents'|trans }}</button>
                {% endif %}
                <button class="viewer_control -toggle-panel" data-target="thumbnails">{{ 'Thumbnails'|trans }}</button>
                <button class="viewer_control -active -toggle-panel" data-target="metadata">{{ 'Metadata'|trans }}</button>
                <button class="viewer_control -toggle-panel" data-target="export">{{ 'Export'|trans }}</button>
            </div>
            <div class="viewer_control-group">
                <button class="viewer_control -fullscreen" title="Vollbildansicht">
                    <span class="sr-only">{{ 'Fullscreen'|trans }}</span>
                </button>
            </div>
        </div>
    </div>
</header>
