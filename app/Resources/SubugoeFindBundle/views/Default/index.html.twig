{% extends 'base.html.twig' %}

{% if search.query is not empty %}
    {% set title = search.query %}
{% endif %}

{% block findnavigation %}
    <div class="find_aside">
        <span class="find_count">{{ pagination.getTotalItemCount }} {{ 'results'|trans }}</span>,
        <span class="find_sort">
            {% set sortandorder = app.request.get('sort') ~ '-' ~ app.request.get('direction') %}
            {% set sort = app.request.get('sort') %}
            {% set route = app.request.attributes.get('_route') %}
            <label for="sort">{{ 'sorted by' | trans }}</label>
            <select class="find_sort-order" id="sort">
                <option value="score-desc" {{ sortandorder == 'score_desc' ? 'selected' }}>{{ 'score' | trans }}</option>
                <option value="year_publish-desc" {{ sortandorder == 'year_publish_desc' ? 'selected' }}>{{ 'year_publish-desc' | transchoice(1) }}</option>
                <option value="year_publish-asc" {{ sortandorder == 'year_publish-asc' ? 'selected' }}>{{ 'year_publish-asc' | transchoice(1) }}</option>
                <option value="date_modified-desc" {{ (sortandorder == 'date_modified-desc' or sort is empty or sort is not defined) and (route != '_volumes') ? 'selected' }}>{{ 'date_modified-desc' | trans }}</option>
                <option value="date_modified-asc" {{ sortandorder == 'date_modified-asc' ? 'selected' }}>{{ 'date_modified-asc' | trans }}</option>
                {% if route == '_volumes' %}
                    <option value="currentnosort-asc" {{ sortandorder == 'currentnosort-asc' or sort is empty or sort is not defined ? 'selected' }}>{{ 'currentnosort-asc' | trans }}</option>
                    <option value="currentnosort-desc" {{ sortandorder == 'currentnosort-desc' ? 'selected' }}>{{ 'currentnosort-desc' | trans }}</option>
                {% endif %}
            </select>
        </span>
    </div>
    {{ knp_pagination_render(pagination) }}
{% endblock %}

{% block contentabove %}
{% endblock %}

{% block content %}

    <ol class="result_list" start="{{ search.offset + 1 }}">
        {% if parentDocument is defined %}
            <li class="result_item">
                <h2 class="viewer_heading">{{ parentDocument.title|first }}</h2>

                <dl class="result_info -no-clear">
                    <dt>{{ 'docstrct' | transchoice(1) }}:</dt>
                    <dd>{{ parentDocument.docstrct | trans }}</dd>

                    {% if parentDocument.creator is defined %}
                        <dt>{{ 'creator' | transchoice(parentDocument.creator | length) }}:</dt>
                        <dd>
                            {% for author in parentDocument.creator %}
                                <a
                                href="{{ path('_homepage', {'filter': {0: {'facetcreator': author}}}) }}">{{ author }}</a>{% if loop.last %}{% else %}; {% endif %}
                            {% endfor %}
                        </dd>
                    {% endif %}

                    {% if parentDocument['year_publish'] is defined %}
                        <dt>{{ 'year_publish' | transchoice(1) }}:</dt>
                        <dd>{{ parentDocument['year_publish'] }}</dd>
                    {% endif %}

                    {% if parentDocument.placepublish is defined %}
                        <dt>{{ 'placepublish' | transchoice(parentDocument.placepublish | length) }}:</dt>
                        <dd>{{ parentDocument.placepublish|join(', ') }}</dd>
                    {% endif %}

                    {% if parentDocument.publisher is defined %}
                        <dt>{{ 'publisher' | transchoice(parentDocument.publisher | length) }}:</dt>
                        <dd>{{ parentDocument.publisher|join(', ') }}</dd>
                    {% endif %}

                    {% if parentDocument.dc is defined %}
                        <dt>{{ 'dc' | transchoice(parentDocument.dc | length) }}:</dt>
                        <dd>
                            {% for dc in parentDocument.dc %}
                                <a
                                href="{{ path('_collection', {id: dc}) }}">{{ dc | trans }}</a>{% if loop.last %}{% else %}, {% endif %}
                            {% endfor %}
                        </dd>
                    {% endif %}
                </dl>

                <ul class="result_links">
                    <li>
                        <a href="http://dfg-viewer.de/show/?set[mets]={{ url('_mets', {id: parentDocument.id}) }}">{{ 'DFG Viewer'|trans }}</a>
                    </li>
                    <li><a href="{{ url('_mets', {id: parentDocument.id}) }}">Mets</a></li>
                    <li><a href="{{ parentDocument.purl }}">{{ 'PURL'|trans }}</a></li>
                    {% if parentDocument.id_PPNanalog_s is defined %}
                        <li>
                            <a href="http://opac.sub.uni-goettingen.de/DB=1/PPN?PPN={{ parentDocument.id_PPNanalog_s.0 | replace({'PPN': ''}) }}">{{ 'Catalogue'|trans }}</a>
                        </li>
                    {% endif %}
                </ul>
            </li>
        {% endif %}

        {% for result in pagination %}
            <li class="result_item">
                <article class="result_wrap">
                    <div class="result_left">
                        {% if result.fields.presentation_url is defined %}
                            <a class="result_link -image" href="{{ path('_detail', {'id': result.fields.id}) }}">
                                <img class="result_thumbnail"
                                     src="{{ path('_image', {'format': 'jpg', 'identifier': (result.fields.presentation_url.0 | replace({'https://nl.sub.uni-goettingen.de/image/': '','/full/full/0/default.jpg': ''})), 'region': 'full', 'size': '100,165', 'rotation': 0, 'quality': 'default'}) }}"
                                     alt="">
                            </a>
                        {% endif %}
                    </div>
                    <div class="result_metadata">
                        <h2 class="result_title">

                            <a class="result_link" title="{{ result.fields.nonsort | first }}"
                               href="{{ path('_detail', {'id': result.fields.id}) }}">{{ result.fields.nonsort | first }}</a>
                            <button class="result_title-toggle -expand">
                                {{ 'Show full title'|trans }}
                            </button>
                            <button class="result_title-toggle -collapse">
                                {{ 'Collapse title'|trans }}
                            </button>
                        </h2>
                        <dl class="result_info">
                            {% if result.fields.creator is defined %}
                                <dt>{{ 'creator' | transchoice(result.fields.creator | length) }}:</dt>
                                <dd>
                                    {% for author in result.fields.creator %}
                                        {{ author }}{% if not loop.last %}; {% endif %}
                                    {% endfor %}
                                </dd>
                            {% endif %}
                            {% if result.fields['year_publish'] is defined %}
                                <dt>{{ 'year_publish' | transchoice(1) }}:</dt>
                                <dd>
                                    {{ result.fields['year_publish'] }}
                                </dd>
                            {% endif %}
                        </dl>
                        <dl class="result_tags">
                            {% if result.fields['subject_topic'] is defined and result.fields['subject_topic'][0] != ' ' %}

                                <dt>{{ 'subject_topic' | trans }}</dt>
                                <dd>
                                    {% for topic in result.fields.subject_topic %}
                                        {{ topic }}
                                        {% if  result.fields.subject_geographic[loop.index0] is defined and result.fields.subject_geographic[loop.index0] != ' ' %}
                                            , {{ result.fields.subject_geographic[loop.index0] }}
                                        {% endif %}
                                        {% if  result.fields.subject_temporal[loop.index0] is defined and result.fields.subject_temporal[loop.index0] != ' ' %}
                                            ({{ result.fields.subject_temporal[loop.index0] }})
                                        {% endif %}{% if not loop.last and result.fields.subject_topic[loop.index] != ' ' %}; {% endif %}
                                    {% endfor %}
                                </dd>
                            {% endif %}
                            {% if result.fields['subject_title'] is defined and result.fields['subject_title'][0] != ' ' %}
                                <dt>{{ 'subject_title' | trans }}</dt>
                                <dd>
                                    {% for title in result.fields.subject_title %}
                                        {{ title }}
                                        {% if  result.fields.subject_name[loop.index0] is defined and result.fields.subject_name[loop.index0] != ' ' %}
                                            , {{ result.fields.subject_name[loop.index0] }}
                                        {% endif %}
                                        {% if  result.fields.subject_date[loop.index0] is defined and result.fields.subject_date[loop.index0] != ' ' %}
                                            ({{ result.fields.subject_date[loop.index0] }})
                                        {% endif %}{% if not loop.last and result.fields.subject_title[loop.index] != ' ' %}; {% endif %}
                                    {% endfor %}
                                </dd>
                            {% endif %}
                        </dl>
                        <p>
                            {{ result.fields.docstrct | trans }}
                            {% if result.fields.docstrct == "volume" and result.fields.currentn is defined %}
                                — {{ 'currentno'|trans }} {{ result.fields.currentno }}
                            {% endif %}
                        </p>
                    </div>
                </article>
            </li>
        {% endfor %}
    </ol>
{% endblock %}

{% block sidebar %}
    {% include '@SubugoeFind/Default/partials/facets.html.twig' %}
{% endblock %}

{% block footer %}
    {{ knp_pagination_render(pagination) }}
{% endblock %}
